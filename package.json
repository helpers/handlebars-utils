{
  "name": "handlebars-utils",
  "description": "Utils for handlebars helpers. Externalized from handlebars, to allow helpers to use the utils without having to depend on handlebars itself.",
  "version": "1.0.4",
  "homepage": "https://github.com/helpers/handlebars-utils",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "helpers/handlebars-utils",
  "bugs": {
    "url": "https://github.com/helpers/handlebars-utils/issues"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "kind-of": "^5.0.2",
    "typeof-article": "^0.1.1"
  },
  "devDependencies": {
    "gulp-format-md": "^1.0.0",
    "handlebars": "^4.0.10",
    "mocha": "^3.5.0"
  },
  "keywords": [
    "handlebars",
    "templates",
    "utils"
  ],
  "verb": {
    "toc": {
      "method": "preWrite"
    },
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "assemble",
        "handlebars-helpers",
        "template-helpers",
        "templates"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "assemble",
      "templates",
      "verb"
    ]
  }
}
